<div class='flex items-center' id="<%= dom_id option %>">
  <div class='w-full'>
    <div class='text-gray-700 text-3xl'>
      <%= option.title %>
      <% if params[:controller] == "responds" %>
       <%= button_to 'Vote', poll_respond_path(:option_id => option.id), method: :put, class: "rounded-lg ml-1 py-3 px-5 bg-blue-200 font-medium"%>
      <% end %>
      <p class="text-sm">votes: &nbsp; <%= option.vote_count %> </p>
    </div>
  </div>
</div>
